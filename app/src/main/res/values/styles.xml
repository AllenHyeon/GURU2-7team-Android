<resources>
    <!-- 메인(기본) 화면용: 액션바가 있는 테마 -->
    <style name="Theme.GURU2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:windowBackground">#FFFFFF</item>

        <!-- 모든 기본 Button에 MyRoundedButton 스타일 적용 -->
        <item name="android:buttonStyle">@style/MyRoundedButton</item>
    </style>

    <!-- AllergyActivity 전용: NoActionBar (직접 만든 상단 레이아웃) -->
    <style name="Theme.GURU2.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:windowBackground">#FFFFFF</item>

        <!-- 동일하게 기본 버튼 스타일 지정 -->
        <item name="android:buttonStyle">@style/MyRoundedButton</item>
    </style>

    <!-- 둥근 모서리+흰색 배경+회색 테두리 버튼 스타일 -->
    <style name="MyRoundedButton" parent="@android:style/Widget.Button">
        <!-- background에 커스텀 Drawable -->
        <item name="android:background">@drawable/rounded_border_white</item>
        <!-- 클릭 리플 효과 -->
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <!-- 텍스트 컬러 -->
        <item name="android:textColor">#9E9E9E</item>
    </style>

</resources>
